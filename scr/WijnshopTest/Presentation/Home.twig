<!-- scr/WijnshopTest/Presentation/Home.twig -->
{%include 'includes/header.twig'%} 
   
        <section class="totalwrapper clearfix">
        {%include 'includes/sidebar.twig'%}    
            <section class="wrappercontent">
                <ul>
                {% for wijn in wijnen %}
                    <div class="wijnwrapper ">
                    <li>
                        <div class="wijntitel">{{wijn.getNaam}} </div> 
                    </li>
                    <li>
                        <a href="selected.php?action=keuze&id={{wijn.getIdWijn}}">
                            <div class="wijntitel">
                                <img id="wijnimage" src="images/{{wijn.getImage}}">
                            </div>
                        </a>
                    </li>
                    <li>
                        <div class="wijntitel">{{wijn.getCat}} </div> 
                    </li>
                    <li>
                        <div class="wijntitel">{{wijn.getLand}} </div> 
                    </li>
                    <li>
                        <div class="wijntitel">{{wijn.getJaartal}} </div> 
                    </li>
                    </div>
                {%endfor%}
                </ul>
                {%if (error == "noDb")%}
                            
                                <p class="red">
                                    Momenteel is er geen mogelijkheid om een verbinding te maken,
                                    probeer later nog eens.
                                </p>
                            
                            {%endif%}
            </section>
        </section>
{%include 'includes/footer.twig'%}    